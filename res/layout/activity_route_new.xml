<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="._21_RouteNew" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/top_bar"
        android:gravity="center"
        android:text="@string/route_start_title"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/route_new_title"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/route_new_source"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/take_bus_new_route_text_view_address_source"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/none"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/take_bus_new_route_button_gps_source"
                    style="@style/ButtonStyleNavy"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="@string/gps" />

                <Button
                    android:id="@+id/take_bus_new_route_button_type_source"
                    style="@style/ButtonStyleNavy"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="@string/type" />

                <Button
                    android:id="@+id/take_bus_new_route_button_saved_source"
                    style="@style/ButtonStyleNavy"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="@string/route_new_saved_addr" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/route_new_destination"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/take_bus_new_route_text_view_address_destination"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/none"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/take_bus_new_route_button_type_destination"
                    style="@style/ButtonStyleNavy"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="@string/type" />

                <Button
                    android:id="@+id/take_bus_new_route_button_saved_destination"
                    style="@style/ButtonStyleNavy"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="@string/route_new_saved_addr" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/take_bus_new_route_checkbox_save_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/route_new_save"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/take_bus_new_route_layout_save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/route_new_name_route"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/take_bus_new_route_edit_text_route_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/route_new_route_name" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/take_bus_new_route_button_cancel"
            style="@style/ButtonStyleNavy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/take_bus_new_route_button_confirm"
            style="@style/ButtonStyleBlue"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="@string/confirm" />
    </LinearLayout>

</LinearLayout>