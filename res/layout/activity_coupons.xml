<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Coupons" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/top_bar"
        android:gravity="center"
        android:text="@string/coupons_title"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <Button
        style="@style/ButtonStyleGreen"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:text="Dummy"
        android:onClick="onClickDummy"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/coupons_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/coupons_textViewNoCoupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/coupons_noCoupons"
            android:textColor="#ffffff"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>